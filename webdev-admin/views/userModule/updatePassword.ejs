<% include ../inc/header.ejs %>
<link href="../../assets/css/plugins/fancybox/jquery.fancybox.css" rel="stylesheet">
<% include ../inc/body.ejs %>
<div class="table-responsive" style="background-color: #fff;">
    <form id="opts-form">
        <table class="table table-striped">
            <tbody id="user-password">
            <input type="text" id="mobile" name="mobile" hidden>

            <tr>
                <td style="text-align: right;">
                    旧密码
                </td>
                <td>
                    <input required type="password" maxlength="20" name="oldPassword" class="form-control"
                           placeholder="请输入您的旧密码  " value="">
                </td>
                <td class="form-item-remark" style="width: 60%;"> *必填</td>
            </tr>

            <tr>
                <td width="100px" style="text-align: right;">
                    新密码
                </td>
                <td>
                    <input required type="password" maxlength="20" name="password" id="password" class="form-control"
                           placeholder="请输入您的新密码"
                           onblur="validPwd()" value="">
                </td>
                <td class="form-item-remark" id="hide"> *必填</td>
                <td class="form-item-remark" style="color:red;display: none;" id="show">密码长度应该在 6 - 16 位</td>
            </tr>


            <tr>
                <td width="100px" style="text-align: right;">
                    确认密码
                </td>
                <td>
                    <input required type="password" maxlength="20" name="passwordCheck" id="passwordCheck"
                           class="form-control" placeholder="请再次输入您的新密码"
                           value="">
                </td>
                <td class="form-item-remark " id="hide">*必填</td>
                <td class="form-item-remark" style="color:red;display: none;" id="show">密码长度应该在 6 - 16 位</td>
            </tr>

            <td></td>
            <td rowspan="2">
                <button class="btn btn-white" type="button" onclick="updatePassword.reset(this);"
                        style="margin-right: 40px;">
                    <i class="fa fa-refresh"></i>&nbsp;重置
                </button>

                <button class="btn btn-primary" type="button" onclick="updatePassword.update(this);">
                    <i class="fa fa-check-square-o"></i>&nbsp;确定
                </button>

            </td>

            </tbody>
        </table>
    </form>
</div>

<script>

</script>

