<!-- 管理的课程模板 -->
<script id="noticeReview-template" type="text/x-dot-template">
    {{ if(it.length == 0) { }}
    暂无数据
    {{ }else{ }}
    {{ for(var i=0;i < it.length;i++){ }}
    <tr>
        <td>
            {{= ((index-1) * size +i+1)}}
        </td>
        <td>
            {{= it[i].noticeId}}
        </td>
        <td>
            {{= it[i].content}}
        </td>
        <td>
            {{= it[i].number}}
        </td>
        <td>
            {{= it[i].reviewTime}}
        </td>

        <td>
            {{= helper.star(it[i].star)}}
        </td>
        <td>
            {{= helper.status(it[i].status)}}
        </td>


        <td>
            <div class="btn-group">
                <button data-toggle="dropdown" class="btn btn-primary btn-xs dropdown-toggle">操作 <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a href="#" data-id="{{= it[i].id}}" onclick="_noticeReview.update(this);">修改</a>
                    </li>
                    <li>
                        <a href="#" data-id="{{= it[i].id}}" onclick="_noticeReview.delete(this);">删除</a>
                    </li>
                </ul>
            </div>
        </td>
    </tr>
    {{ } }}
    {{ } }}
</script>

